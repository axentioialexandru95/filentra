<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Laravel" xsi:noNamespaceSchemaLocation="phpcs.xsd">
    <description>Laravel PHP_CodeSniffer ruleset</description>

    <!-- Show colors in console -->
    <arg value="-colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="ns"/>

    <!-- Use PSR-12 as the base standard -->
    <rule ref="PSR12"/>

    <!-- Include the whole Laravel app directory -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Exclude node_modules directory -->
    <exclude-pattern>node_modules/*</exclude-pattern>

    <!-- Exclude storage directory -->
    <exclude-pattern>storage/*</exclude-pattern>

    <!-- Exclude bootstrap cache -->
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>

    <!-- Exclude compiled views -->
    <exclude-pattern>resources/views/compiled/*</exclude-pattern>

    <!-- Laravel specific exclusions -->
    <exclude-pattern>database/migrations/*</exclude-pattern>
    <exclude-pattern>*.blade.php</exclude-pattern>

    <!-- Allow long lines in certain files -->
    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>config/*</exclude-pattern>
        <exclude-pattern>routes/*</exclude-pattern>
    </rule>

    <!-- Relaxed rules for test files -->
    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

    <!-- Allow snake_case for test method names -->
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>
</ruleset>
